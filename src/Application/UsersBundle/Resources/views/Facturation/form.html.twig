{{ form_start(form) }}
<div class="modal fade" id="facturationModal" tabindex="-1" role="dialog" aria-labelledby="facturationModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="facturationModalLabel">Facturation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="entreprise portage entrepreneur personne legend facturation_type">
                    <p>Facturation en tant que : </p>
                </div>
                <div class="entreprise portage entrepreneur personne facturation_type">
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_widget(form.type) }}
                        </div>
                    </div>
                </div>
                <div class="entreprise portage entrepreneur legend">
                    <p>Société</p>
                </div>
                <div class="entreprise portage entrepreneur">
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_label(form.raisonSociale) }}
                            {{ form_widget(form.raisonSociale) }}
                        </div>
                    </div>
                </div>
                <div class="entreprise">
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_label(form.formeSociete) }}
                            {{ form_widget(form.formeSociete) }}
                        </div>
                    </div>
                </div>
                <div class="entreprise portage entrepreneur">
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_label(form.siret) }}
                            {{ form_widget(form.siret) }}
                        </div>
                    </div>
                </div>
                <div class="portage">
                    {{ form_label(form.referencePortage) }}
                    {{ form_widget(form.referencePortage) }}
                </div>
                <div class="entreprise portage entrepreneur personne legend">
                    <p>Adresse</p>
                </div>
                <div class="entreprise portage entrepreneur personne">
                    <div>
                        {{ form_label(form.adresse) }}
                        {{ form_widget(form.adresse) }}
                    </div>
                    <div>
                        {{ form_label(form.adresseComplement) }}
                        {{ form_widget(form.adresseComplement) }}
                    </div>
                    <div class="row">
                        {% if facturation is not null %}
                            <div class="col-md-6">
                                {{ form_label(form.code_postal) }}
                                {{ form_widget(form.code_postal, { 'value': facturation.ville.cp } ) }}
                            </div>
                        {% else %}
                            <div class="col-md-6">
                                {{ form_label(form.code_postal) }}
                                {{ form_widget(form.code_postal) }}
                            </div>
                        {% endif %}

                        <div class="col-md-6">
                            {{ form_label(form.ville) }}
                            {{ form_widget(form.ville) }}
                        </div>
                    </div>
                </div>
                <div class="entreprise portage legend">
                    <p>Representant légal (si vous ne l'êtes pas)</p>
                </div>
                <div class="entreprise portage">
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_label(form.representantLegalCivilite) }}
                            {{ form_widget(form.representantLegalCivilite) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_label(form.representantLegalNom) }}
                            {{ form_widget(form.representantLegalNom) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_label(form.representantLegalPrenom) }}
                            {{ form_widget(form.representantLegalPrenom) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_label(form.representantLegalFonction) }}
                            {{ form_widget(form.representantLegalFonction) }}
                        </div>
                        <div class="col-md-6" id="autre_fonction">
                            {{ form_label(form.intitule) }}
                            {{ form_widget(form.intitule) }}
                        </div>
                    </div>
                </div>
                <div class="entreprise portage entrepreneur legend">
                    <p>Attestation de vigilance URSSAF</p><span>Lien de <a
                                href="https://www.urssaf.fr/portail/home/employeur/declarer-et-payer/obtenir-une-attestation/attestation-de-vigilance.html" target="_blank">Téléchargement</a></span>
                </div>
                <div class="entreprise portage entrepreneur">
                    {{ form_widget(form.attestationUrssaf) }}
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                {{ form_widget(form.submit) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
</div>
{{ form_end(form) }}