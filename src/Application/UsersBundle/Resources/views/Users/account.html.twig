{% extends "ApplicationUsersBundle::layout.html.twig" %}

{% block body %}
    <section class="col-md-9 col-md-offset-2">
        {% for info in app.session.flashbag.get('info') %}
            <div class="alert alert-success" role="alert">{{ info }}</div>
        {% endfor %}
        <div class="page-header">
            <h1>Mon compte<br><small>Détails</small></h1>
        </div>
        
        <div class="row">
            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title"><b>Informations compte</b></h3>
                    </div>
                    <div class="panel-body">
                        <p><b>Date de création :</b> {{ user.prenom }}</p>
                        <p><b>Ville de rattachement :</b> {% if user.ville %} {{ user.ville.nom|capitalize }} {% endif %}</p>
                        <p><b>Dossiers en Cours :</b> {{ user.tel1 }}</p><br>
                        <p><b>Login :</b> {{ user.civilite }}</p>
                        <p><b>Mot de passe :</b> {{ user.password | slice(0,-45) }}</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title"><b>Nom et Contact</b></h3>
                    </div>
                    <div class="panel-body">
                        <p><b>Civilité :</b> {{ user.civilite }}</p>
                        <p><b>Nom :</b> {{ user.nom }}</p>
                        <p><b>Prénom :</b> {{ user.prenom }}</p>
                        <p><b>Tél 1 :</b> {{ user.tel1 }}</p>
                        <p><b>Tél 2 :</b> {{ user.tel2 }}</p>
                        <p><b>Email 1 :</b> {{ user.email }}</p>
                        <p><b>Email 2 :</b> {{ user.email2 }}</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            
            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                      <h3 class="panel-title"><b>Caractéristiques d'Intervention</b></h3>
                    </div>
                    <div class="panel-body">
                      Panel content
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                      <h3 class="panel-title"><b>Agenda</b></h3>
                    </div>
                    <div class="panel-body">
                        <p><b>Calendrier ID :</b> {{ user.calendrierid }}</p>
                        <p><b>Calendrier URI :</b> {{ user.calendrieruri }}</p>
                    </div>
                </div>
            </div>
           
            <div class="col-md-12">
                <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-warning"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>&nbsp; Modifier</a>
            </div>
        </div>
        
        </section>
    
    
    
{% endblock %}