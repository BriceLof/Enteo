{% extends "ApplicationUsersBundle::layout.html.twig" %}

{% block menuLeft %}
    <nav class="col-md-2 list-group" >
        <ul style="">
            <li class="list-group-item active" ><a href="{{ path('user') }}" >Tout</a></li>
           
            <br>
            <a href="{{ path('fos_user_registration_register') }}" class="btn btn-success">Ajouter un utilisateur</a>
        </ul>
        
    </nav>
{% endblock %}

{% block body %}
    <section class="col-md-9 ">
        <table class="table table-striped table-responsive ">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Pr√©nom</th>
                    <th>Ville</th>
                    <th>Email</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.nom|capitalize }}</td>
                        <td>{{ user.prenom|capitalize }}</td>
                        <td>{{ user.ville|capitalize }}</td>
                        <td>{{ user.email }}</td>
                        <td>
                            <a href="{{ path('user_edit', {'id': user.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                            <a href="{{ path('user_delete', {'id': user.id}) }}"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </section>
{% endblock %}