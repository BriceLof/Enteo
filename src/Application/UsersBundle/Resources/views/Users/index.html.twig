{% extends "ApplicationUsersBundle::layout.html.twig" %}

{% block menuLeft %}
    <nav class="col-md-2 list-group" >
        <ul style="margin-top: 46px;">
            <li class="list-group-item" ><a href="{{ path('user_type', {'typeUser':''}) }}" >Tout</a></li>
            <li class="list-group-item" ><a href="{{ path('user_type', {'typeUser':'admin'}) }}" >Administrateurs</a></li>
            <li class="list-group-item" ><a href="{{ path('user_type', {'typeUser':'consultant'}) }}" >Consultants</a></li>
            <li class="list-group-item" ><a href="{{ path('user_type', {'typeUser':'commercial'}) }}" >Commerciaux</a></li>
            <li class="list-group-item" ><a href="{{ path('user_type', {'typeUser':'gestion'}) }}" >Gestionnaire</a></li>
            <br>
            <a href="{{ path('fos_user_registration_register') }}" class="btn btn-success">Ajouter un utilisateur</a>
        </ul>
        
    </nav>
{% endblock %}

{% block body %}
    <section class="col-md-9 ">
        <div class="page-header">
            <h1>Gestion - Utilisateurs<br><small>Créer, modifier, voir les enregistrements de la base de données</small></h1>
        </div>
        <table class="table table-bordered table-responsive ">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Ville</th>
                    <th>E-mail</th>
                    <th colspan="2">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td><a href="{{ path('user_show', {'id': user.id}) }}">{{ user.nom|capitalize }}</a></td>
                        <td>{{ user.prenom|capitalize }}</td>
                        <td>{{ user.ville.nom|capitalize }}</td>
                        <td>{{ user.email }}</td>
                        <td>
                            <a href="{{ path('user_edit', {'id': user.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>&nbsp; modifier</a>
                   
                        </td>
                        <td>
                      
                            <a href="{{ path('user_delete', {'id': user.id}) }}"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span>&nbsp; supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </section>
{% endblock %}