{% extends "ApplicationUsersBundle::layout.html.twig" %}

{% block title %}Utilisateurs{% endblock %}

{% block menuLeft %}

{% endblock %}

{% block body %}
    <section class="col-md-12">
        {# dump(app.request.get("typeUser")) #}
        {% for info in app.session.flashbag.get('info') %}
            <div class="alert alert-success alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                {{ info }}
            </div>
        {% endfor %}
        <div class="page-header">
            <div class="row">
                <h1 class="col-md-10">Gestion - Utilisateurs<br><small>Créer, modifier, voir les enregistrements de la base de données</small></h1>
                <nav class="col-md-2  typeUtilisateur" >
                    <ul class="list-group" style="margin-top: 46px;">
                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="list-group-item itemAdmin"><a href="{{ path('user_type', {'typeUser':'admin'}) }}" >Administrateurs</a></li>
                        {% endif %} 
                        <li class="list-group-item itemConsultant"><a href="{{ path('user_type', {'typeUser':'consultant'}) }}" >Consultants</a></li>
                        <li class="list-group-item itemCommercial"><a href="{{ path('user_type', {'typeUser':'commercial'}) }}" >Commerciaux</a></li>
                        <li class="list-group-item itemGestion"><a href="{{ path('user_type', {'typeUser':'gestion'}) }}" >Gestionnaire</a></li>
                        <br>
                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('fos_user_registration_register') }}" class="btn btn-success"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span>&nbsp; Ajouter un utilisateur</a>
                        {% endif %}    
                    </ul>
                </nav>
            </div>
            
        </div>
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Actif</th>
                        <th>Civilité</th>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Tél 1</th>
                        <th>E-mail 1</th>
                        <th>Login</th>
                        <th>Mdp</th>
                        {% if app.request.get("typeUser") == "consultant" %}
                            <th>Ville</th>
                            <th>Distanciel</th>
                            <th>Bac +3 et +</th>
                            <th>Dossier réalisés</th>
                            <th>Dossier en cours</th>
                            <th>Tx Diplôme</th>
                            <th>Satisfaction</th>
                        {% endif %}
                        {% if is_granted('ROLE_ADMIN') %}
                            <th colspan="2">Actions</th>
                        {% endif %}
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            {% if user.enabled == "0" %}<td class="bg-danger"> Non </td>{% else %} <td class="bg-success"> Oui </td>{% endif %}
                            <td>{{ user.civilite|capitalize }}</td>
                            <td><a href="{{ path('user_show', {'id': user.id}) }}">{{ user.nom|capitalize }}</a></td>
                            <td>{{ user.prenom|capitalize }}</td>
                            <td>{{ user.tel1 }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.username }}</a</td>
                            <td>{{ user.password | slice(0,-45)}}</td>
                            {% if app.request.get("typeUser") == "consultant" %}
                                <td>{% if user.ville %} {{ user.ville.nom|capitalize }} {% endif %}</td>
                                <td>
                                    {% if user.distanciel | length > 0 %}
                                        {% for format in user.distanciel %}
                                            {{ loop.index > 1 ?  '/'~format :format }}
                                        {% endfor %}
                                    {% endif %}
                                </td>
                                <td>{{ 1 }}</td>
                                <td>{{ 20 }}</td>
                                <td>{{ 14 }}</td>
                                <td>{{ '92%' }}</td>
                                <td>{{ '4,7/5' }}</td>
                            {% endif %}
                            {% if is_granted('ROLE_ADMIN') %}
                                <td>
                                    <a href="{{ path('user_edit', {'id': user.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>&nbsp; modifier</a>
                                </td>
                                <td>
                                    <a href="" data-toggle="modal" data-target="#myModal{{loop.index}}" data-id-user="{{user.id}}" class="delete_element"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span>&nbsp; désactiver</a>
                                    <div class="modal fade" id="myModal{{loop.index}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                                        {{ render(controller("ApplicationUsersBundle:Users:turnOff", {'id': user.id } )) }}
                                    </div>
                                </td>
                            {% endif %}
                        </tr>
                        
                    {% endfor %}
                </tbody>
            </table>
        </div>
            
        
    </section>
    
{% endblock %}