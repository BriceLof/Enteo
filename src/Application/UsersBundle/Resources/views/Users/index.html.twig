{% extends "ApplicationUsersBundle::layout.html.twig" %}

{% block menuLeft %}

{% endblock %}

{% block body %}
    <section class="col-md-12">
        {# dump(app.request.get("typeUser")) #}
        <div class="page-header">
            <div class="row">
                <h1 class="col-md-10">Gestion - Utilisateurs<br><small>Créer, modifier, voir les enregistrements de la base de données</small></h1>
                <nav class="col-md-2 list-group" >
                    <ul style="margin-top: 46px;">
                        <li class="list-group-item" ><a href="{{ path('user_type', {'typeUser':'admin'}) }}" >Administrateurs</a></li>
                        <li class="list-group-item" ><a href="{{ path('user_type', {'typeUser':'consultant'}) }}" >Consultants</a></li>
                        <li class="list-group-item" ><a href="{{ path('user_type', {'typeUser':'commercial'}) }}" >Commerciaux</a></li>
                        <li class="list-group-item" ><a href="{{ path('user_type', {'typeUser':'gestion'}) }}" >Gestionnaire</a></li>
                        <br>
                        <a href="{{ path('fos_user_registration_register') }}" class="btn btn-success"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span>&nbsp; Ajouter un utilisateur</a>
                    </ul>
                </nav>
            </div>
            
        </div>
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Civilité</th>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Tél 1</th>
                        <th>E-mail 1</th>
                        <th>Login</th>
                        <th>Mdp</th>
                        {% if app.request.get("typeUser") == "consultant" %}
                            <th>Ville</th>
                            <th>Distanciel</th>
                            <th>Bac +3 et +</th>
                            <th>Dossier réalisés</th>
                            <th>Dossier en cours</th>
                            <th>Tx Diplôme</th>
                            <th>Satisfaction</th>
                        {% endif %}
                        <th colspan="2">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.civilite|capitalize }}</a</td>
                            <td><a href="{{ path('user_show', {'id': user.id}) }}">{{ user.nom|capitalize }}</a></td>
                            <td>{{ user.prenom|capitalize }}</td>
                            <td>{{ user.tel1 }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.username }}</a</td>
                            <td>{{ user.password | slice(0,-45)}}</td>
                            {% if app.request.get("typeUser") == "consultant" %}
                                <td>{% if user.ville %} {{ user.ville.nom|capitalize }} {% endif %}</td>
                                <td>{{ user.distanciel|capitalize }}</td>
                                <td>{{ 1 }}</td>
                                <td>{{ 20 }}</td>
                                <td>{{ 14 }}</td>
                                <td>{{ '92%' }}</td>
                                <td>{{ '4,7/5' }}</td>
                            {% endif %}
                            <td>
                                <a href="{{ path('user_edit', {'id': user.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>&nbsp; modifier</a>
                            </td>
                            <td>
                                <a href="{{ path('user_delete', {'id': user.id}) }}"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span>&nbsp; supprimer</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
            
        
    </section>
{% endblock %}