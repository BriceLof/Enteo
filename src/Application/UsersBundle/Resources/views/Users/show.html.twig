{% extends "ApplicationUsersBundle::layout.html.twig" %}

{% block title %}Compte utilisateur de {% endblock%}

{% block menuLeft %}
    <nav class="col-md-2 list-group" >
        <ul style="margin-top: 46px;">
            <li class="list-group-item" ><a href="{{ path('user_type', {'typeUser':'admin'}) }}" >Administrateurs</a></li>
            <li class="list-group-item" ><a href="{{ path('user_type', {'typeUser':'consultant'}) }}" >Consultants</a></li>
            <li class="list-group-item" ><a href="{{ path('user_type', {'typeUser':'commercial'}) }}" >Commerciaux</a></li>
            <li class="list-group-item" ><a href="{{ path('user_type', {'typeUser':'gestion'}) }}" >Gestionnaire</a></li>
            <br>
            <a href="{{ path('fos_user_registration_register') }}" class="btn btn-success"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span>&nbsp;Ajouter un utilisateur</a>
        </ul>
        
    </nav>
{% endblock %}

{% block body %}
    <section class="col-md-9 ">
        {% for info in app.session.flashbag.get('info') %}
            <div class="alert alert-success" role="alert">{{ info }}</div>
        {% endfor %}
        <div class="page-header">
            <h1>Gestion - Utilisateurs<br><small>Détails</small></h1>
        </div>
        
        <div class="row">
            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title"><b>Informations compte</b></h3>
                    </div>
                    <div class="panel-body">
                        <p><b>Type utilisateur :<span class="text-danger"> {{ typeUser }}</span></b></p>
                        <p><b>Date de création :</b> {{ user.dateCreation | date("d/m/Y")}}</p>
                        <p><b>Ville de rattachement : <span class="text-danger">{% if user.ville %} {{ user.ville.nom|capitalize }} {% endif %}</span></b></p>
                        <p><b>Dossiers en Cours :</b> {{ user.tel1 }}</p><br>
                        <p><b>Login :</b> {{ user.username }}</p>
                        <p><b>Mot de passe :</b> {{ user.password | slice(0,-45) }}</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title"><b>Nom et Contact</b></h3>
                    </div>
                    <div class="panel-body">
                        <p><b>Civilité :</b>{{ user.civilite |capitalize }}</p>
                        <p><b>Nom : <span class="text-danger">{{ user.nom |capitalize }}</span></b></p>
                        <p><b>Prénom : <span class="text-danger">{{ user.prenom |capitalize }}</span></b></p>
                        <p><b>Tél 1 :</b> {{ user.tel1 }}</p>
                        <p><b>Tél 2 :</b> {{ user.tel2 }}</p>
                        <p><b>Email 1 : <span class="text-danger">{{ user.email }}</span></b></p>
                        <p><b>Email 2 :</b> {{ user.email2 }}</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            
            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                      <h3 class="panel-title"><b>Caractéristiques d'Intervention</b></h3>
                    </div>
                    <div class="panel-body">
                      Panel content
                    </div>
                </div>
            </div>
            
            {% if typeUser == "Consultant" %}
                <div class="col-md-6">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                          <h3 class="panel-title"><b>Agenda</b></h3>
                        </div>
                        <div class="panel-body">
                            <p><b>Calendrier ID :</b> {{ user.calendrierid }}</p>
                            <p style="overflow: scroll;"><b>Calendrier URI :</b> {{ user.calendrieruri }}</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="panel panel-info">
                        <div class="panel-heading">
                          <h3 class="panel-title"><b>Enquête Qualité</b></h3>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <p class='col-md-6'><b>Taux de diplômés :</b></p><p class='col-md-6'>92% <span>Validation totale</span></p>
                                <p class='col-md-6'></p><p class='col-md-6'>8% Validation Partielle</p>
                                <p class='col-md-6'></p><p class='col-md-6'>100% Total</p>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
            
            <div class="col-md-12">
                <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-warning"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>&nbsp; Modifier</a>
                <a href="" data-toggle="modal" data-target="#myModal" class="btn btn-danger"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span>&nbsp; Désactiver</a> 
            </div>
        </div>
    </section>
    
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        {{ render(controller("ApplicationUsersBundle:Users:turnOff", {'id': user.id } )) }}
    </div>
    
            
    
{% endblock %}