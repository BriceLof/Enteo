{% block title %}proposition {{ beneficiaire.civiliteConso|capitalize~' '~beneficiaire.prenomConso|capitalize~' '~beneficiaire.nomConso|capitalize }}{% endblock %}

{% block stylesheets %}
    <style>
        .page {
            height: 1020px;
            position: relative;
            padding: 0 50px;
            font-size: 13px;
        }

        .center {
            text-align: center;
        }

        .liste li {
            margin-bottom: 10px;
        }

        .logo_entheor {
            width: 200px;
        }

        .line-heigth {
            line-height: 2;
        }

        .titre {
            background-color: rgba(128, 128, 128, 0.22);
        }

        .top50 {
            margin-top: 50px
        }

        .top30 {
            margin-top: 30px
        }

        .top20 {
            margin-top: 20px
        }

        .top200 {
            margin-top: 200px
        }

        .top10 {
            margin-top: 10px
        }

        .font12 {
            font-size: 12px;
        }

        .right {
            text-align: right;
        }

        .footer {
            position: absolute;
            bottom: 0;
            text-align: center;
            width: 100%;
            margin-left: -50px;
        }

        .footer p {
            text-align: center;
            font-size: 12px;
            font-family: Helvetica Neue, Helvetica, Arial, sans-serif;
        }

        .signature {
            display: inline-block;
            width: 30%;
            border-top: 1px solid black;
        }

        .signature_right {
            float: right;
        }

        .signature_left {
