{% if historiques is not empty %}
     <table class="table table-striped">
           <tr>
              <th style="border:none;">Date</th>
              <th style="border:none;">Heure debut</th>
              <th style="border:none;">Heure fin</th>
              <th style="border:none;">Bureau</th>
              <th style="border:none;">Type Rdv</th>
              {% if(is_granted('ROLE_ADMIN') or is_granted('ROLE_CONSULTANT')) %}
                <th>Actions</th>
              {% endif %}
           </tr>
           {% for historique in historiques %}
                {% if historique.eventId != '0' %}

                    <tr>
                        <td style="margin-top: 0px;margin-left: 0px; display: inline-block;width: 100%; border:none;">
                           {{historique.dateDebut|date('d/m/Y')}} <span style="margin-left:6px" class="glyphicon glyphicon-calendar"></span>
                        </td>
                        <td style="border:none;">
                            <span >{{historique.heureDebut|date('H:i')}}</span>
                        </td>
                        <td style="border:none;">
                            <span >{{ historique.heureFin|date('H:i') }}</span>
                        </td>
                        <td style="border:none;">
                            {% if historique.bureau is not null %}
                                <span>
                                   {{ historique.bureau.nombureau }}
                                </span>
                            {% else %}
                                <span>-</span>
                            {% endif %}
                        </td>
                        <td style="border:none;">
                            {% if historique.bureau is not null  %}
                                <span> {{historique.typerdv}} </span>
                            {% else %}
                                <span>{{historique.typerdv}}</span>
                            {% endif %}
                        </td>
                        {% if(is_granted('ROLE_ADMIN') or is_granted('ROLE_CONSULTANT')) %}
                            <td>
                                <center>
                                    <p>
                                       {% if "now"|date('Ymd H:i') < historique.dateDebut|date('Ymd H:i') %}
                                           <a href="{{ path('application_plateforme_agenda', {'eventid': historique.eventId, 'update':'1'}) }} " target="_blank" >
                                               <span class="glyphicon glyphicon-pencil cursor_pointer" title="Modifier le rendez-vous"></span>
                                           </a>
                                       {% endif %}
                                       <span class="glyphicon glyphicon-remove btn_supp cursor_pointer" title="Supprimer le rendez-vous"></span>
                                    </p>
                                </center>
                            </td>
                        {% endif %}
                    </tr>
                {% else %}
                    <tr>
                        <td style="margin-top: 0px;margin-left: 0px; display: inline-block;width: 100%; border:none;">
                            {{historique.dateDebut|date('d/m/Y')}}
                        </td>
                        <td style="border:none;">
                            <span >{{historique.heureDebut|date('H:i')}}</span>
                        </td>
                        <td colspan=3>
                            <span>{{ historique.description }}</span>
                        </td>
                        {% if(is_granted('ROLE_ADMIN') or is_granted('ROLE_CONSULTANT')) %}
                            <td><span>-</span></td>
                        {% endif %}
                    </tr>
                {% endif %}
            {% endfor %}
     </table>
{% else %}
    <span style="margin-left: 6px;">Aucun historique</span>
{% endif %}



