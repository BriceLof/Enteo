<!-- Modal -->
<div class="modal fade" id="facturation" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form action="{{ path('application_create_facture', { 'id' : beneficiaire.id }) }}" method="POST"  >
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Génération facture</h4>
                </div>
                <div class="modal-body">
                    <div id="block_form_facture">
                        <header>
                            <div class="row">
                                <p class="col-md-3"><b>Financeur * : </b></p>
                                <p class="col-md-12">{{ form_widget(form.nom_financeur) }}</p>
                                <p class="col-md-6">{{ form_widget(form.rue_financeur, {'attr' : {'value': beneficiaire.accompagnement.financeur[0].adresse~" - "~beneficiaire.accompagnement.financeur[0].complementAdresse }}) }}</p>
                                <p class="col-md-6">{{ form_widget(form.code_postal_financeur, {'attr' : {'value': beneficiaire.accompagnement.financeur[0].cp~" "~beneficiaire.accompagnement.financeur[0].ville }}) }}</p>
                            </div>
                            <p id="objet" class="row">
                                <br>
                                <b class="col-md-12">Objet : Accompagnement VAE {{ beneficiaire.civiliteConso | capitalize ~ ' '~ beneficiaire.nomConso | capitalize ~ ' '~ beneficiaire.prenomConso | capitalize }}</b><br><br>
                                <span class="col-md-2">N° Ref :</span>  <span class="col-md-3">{{ form_widget(form.numero_ref, {'attr' : {"value": beneficiaire.refFinanceur } }) }}</span> <span class="col-md-3">Code Adhérent :</span> <span class="col-md-3">{{ form_widget(form.code_adherent) }}</span>
                            </p>
                        </header>

                        <section>
                            <div class="row">
                                <p>
                                    <span class="blue_text col-md-4"><b>Type de paiement *</b></span> <span class="col-md-4">{{ form_widget(form.type_paiement) }}</span>
                                </p>
                            </div>

                            <div class="row" style="margin-top:5px;margin-bottom: 5px;">
                                <div class="col-md-6">
                                    <div class="row">
                                        <span class="col-md-7"><b>Accompagnement VAE *</b></span>
                                        <div class="col-md-5">
                                            <div class="row">
                                                <span class="col-md-8" >{{ form_widget(form.heure_accompagnement_facture, {'attr' : {"value": beneficiaire.accompagnement.heure } }) }}</span>
                                                <span class="col-md-1" ><b style="display:block;margin-left:-28px;margin-top:3px;">h</b></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="row">
                                        <span class="col-md-8" >{{ form_widget(form.montant, {'attr' : {"value": montantTotalAccompagnement } }) }}</span>
                                        <span class="col-md-1" ><b style="display:block;margin-left:-28px;margin-top:3px;">€</b></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <p>
                                    <span class="col-md-3"><b>Détails</b>  </span> <span class="col-md-5">{{ form_widget(form.detail_accompagnement) }}</span>
                                </p>
                            </div>
                            <div class="row">
                                <p class="col-md-12"><b>Date accompagnementd *</b></p>
                                <p class="col-md-1" style="margin-top: 3px;margin-right: -25px;">du</p><span class="col-md-4">{{ form_widget(form.date_debut_accompagnement, {'attr' : {"value": beneficiaire.accompagnement.dateDebut | date('Y-m-d') } }) }}</span><p class="col-md-1" style="margin-top: 3px;margin-right: -25px;">au</p><span class="col-md-4">{{ form_widget(form.date_fin_accompagnement, {'attr' : {"value": beneficiaire.accompagnement.dateFin | date('Y-m-d') } }) }}</span>
                            </div>
                            <div class="row">
                                <br>
                                <p><span class="col-md-3">{{ form_label(form.info_paiement) }}</span> <span class="col-md-6">{{ form_widget(form.info_paiement) }}</span></p><br>
                                <p><span class="col-md-3">{{ form_label(form.date) }}</span> <span class="col-md-6">{{ form_widget(form.date) }}</span></p>
                            </div>
                        </section>

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                    {{ form_widget(form.save) }}
                </div>

                <!-- partie du formulaire que je ne veux pas avoir -->
                <div style="display:none">
                    {{ form_label(form.detail_accompagnement) }}
                    {{ form_widget(form.detail_accompagnement) }}
                </div>
                {{ form_rest(form) }}
            </form>
        </div>
    </div>
</div>
