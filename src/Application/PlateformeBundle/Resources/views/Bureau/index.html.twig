{% extends "ApplicationPlateformeBundle::layout.html.twig" %}
{% block title %}Bureaux{% endblock%}
{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-9">
                {% for info in app.session.flashbag.get('info') %}
                    <div class="alert alert-success alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        {{ info }}
                    </div>
                {% endfor %}
                <div class="page-header">
                    <div class="row">
                        <h1 class="col-md-10">Gestion - Bureaux<br><small>Créer, modifier, voir les enregistrements de la base de données</small></h1>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr> 
                                <th>Ville</th>
                                <th>Nom</th>
                                <th>Adresse</th>
                                <th>Observation</th>
                                {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_COMMERCIAL') %}
                                    <th colspan="3">Actions</th>
                                {% endif %}
                            </tr>
                        </thead>
                        <tbody>
                            {% for bureau in bureaux %}
                                <tr>
                                    <td>{{ bureau.ville.nom | capitalize }}</td>
                                    <td>{{ bureau.nombureau | capitalize }}{% if bureau.temporaire %}<span title="Bureau temporaire" style="margin-left:8px;" class="glyphicon glyphicon-time"></span>{% endif %}</td>
                                    <td>{{ bureau.adresse | capitalize }} ({{ bureau.ville.cp }})</td>
                                    <td>{{ bureau.observation | capitalize }}</td>
                                    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_COMMERCIAL') %}
                                        <td>
                                            <span title="Activer/Désactiver le bureau" style="cursor:pointer;color: {{ bureau.actifInactif ? "green" : "red" }}; float: right" data-toggle="modal" data-target="#myModalBureauDelete{{ loop.index }}" class="glyphicon glyphicon-{{ bureau.actifInactif ? "ok" : "ban" }}-circle"></span>
                                        </td>
                                        <td>
                                            <span title="Modifier le bureau" style="cursor:pointer;color: black; float: right" data-toggle="modal" data-bureau-id="{{bureau.id}}" data-target="#myModalBureauModify{{ loop.index }}" class="modifierBureau glyphicon glyphicon-pencil"></span>
                                        </td>
										<td>
                                            <span title="Supprimer le bureau" style="cursor:pointer;color: black; float: right" data-toggle="modal" data-bureau-id="{{bureau.id}}" data-target="#myModalBureauSupprimer{{ loop.index }}" class="supprimerBureau glyphicon glyphicon-remove"></span>
                                        </td>
										
                                        <div class="modal fade" id="myModalBureauDelete{{ loop.index }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                        <h4 class="modal-title" id="myModalLabel">Confirmation</h4>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div>
                                                            <span>Voulez-vous vraiment {{ bureau.actifInactif ? "désactiver" : "activer" }} ce bureau?</span>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <div>
                                                            <button type="button" class="btn btn-default deleteBtn" data-dismiss="modal">Annuler</button>
                                                            <a class="deleteBtn" href="{{ path('application_actif_inactif_bureau', { 'id': bureau.id }) }}">
                                                                <button class="btn btn-primary">{{ bureau.actifInactif ? "Désactiver" : "Activer" }}</button>
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="myModalBureauModifier{{bureau.id}} modal fade" id="myModalBureauModify{{ loop.index }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                        <h4 class="modal-title" id="myModalLabel">Modifier
                                                        </h4>
                                                    </div>
                                                    <form method="POST" id="bureauEditForm" action="{{ path('application_edit_bureau', {'id': bureau.id}) }}" >
                                                        {{ render(controller("ApplicationPlateformeBundle:Bureau:edit",{'id': bureau.id})) }}
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
										
										<div class="modal fade" id="myModalBureauSupprimer{{ loop.index }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                        <h4 class="modal-title" id="myModalLabel">Confirmation</h4>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div>
                                                            <span>Voulez-vous vraiment supprimer ce bureau?</span>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <div>
                                                            <button type="button" class="btn btn-default deleteBtn" data-dismiss="modal">Annuler</button>
                                                            <a class="deleteBtn" href="{{ path('application_delete_bureau', { 'id': bureau.id }) }}">
                                                                <button class="btn btn-primary">Supprimer</button>
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    {% endif %}
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- Formulaire ajout bureau -->                
            {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_COMMERCIAL') %}
                <div class="col-md-3" style="margin-top:177px;">
                    <div id="ajouteBureau" class="tableOnglet">
                        <form method="POST" id="bureauNewForm" action="{{ path('application_new_bureau') }}" >
                            <table class="table-condensed">
                                <caption class="titreSection">Ajouter un bureau</caption>
                                {{ render(controller("ApplicationPlateformeBundle:Bureau:new")) }}
                            </table>
                        </form>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {% javascripts filter="?jsqueeze"
           '@ApplicationPlateformeBundle/Resources/public/js/bureau.js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock%}