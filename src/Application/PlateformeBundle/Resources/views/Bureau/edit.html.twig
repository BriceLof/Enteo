
    <div class="modal-body">
        <div>
            <div class="form-group">
                <label>Nom du Bureau : </label>
                {{ form_widget(edit_form.nombureau) }}
            </div>
            <div class="form-group">
                <label>Adresse : </label>
                {{ form_widget(edit_form.adresse) }}
            </div>
            <div class="form-group">
                <label>Code Postal : </label>
               {{ form_widget(edit_form.code_postal) }}
            </div>
