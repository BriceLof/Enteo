<form method="POST" id="bureauEditForm" action="{{ path('application_edit_bureau', { 'id' : bureau.id }) }}" >
    <table>
        <tr>
            <td>Nom du Bureau : </td>
            <td colspan="3">{{ form_widget(edit_form.nom) }}</td>
        </tr>
        <tr>
            <td>Adresse : </td>
            <td colspan="3">{{ form_widget(edit_form.adresse) }}</td>
        </tr>
        <tr>
            <td>Ville : </td>
            <td colspan="3">{{ form_widget(edit_form.ville.nom) }}</td>
        </tr>
        <tr>
            <td>Code Postal : </td>
            <td colspan="3">{{ form_widget(edit_form.ville.zip) }}</td>
        </tr>
        <tr>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
            <td class="valider">{{ form_widget(edit_form.submit) }}</td>
        </tr>
        <tr>
            <td>{{ form_rest(edit_form) }}</td>
            <td>{{ form_errors(edit_form) }}</td>
        </tr>
    </table>
</form>